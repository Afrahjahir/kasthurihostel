# ---------------------------------------------------------------
# ✅ Enable mod_rewrite
# ---------------------------------------------------------------
RewriteEngine On
RewriteBase /

# ---------------------------------------------------------------
# ✅ 1. Redirect to https://kasthurihostel.com (force HTTPS + non-www)
# ---------------------------------------------------------------
# RewriteCond %{HTTPS} off [OR]
# RewriteCond %{HTTP_HOST} !^kasthurihostel\.com$ [NC]
# RewriteRule ^(.*)$ https://kasthurihostel.com/$1 [L,R=301]

# ---------------------------------------------------------------
# ✅ 2. Skip existing files and folders
# ---------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ---------------------------------------------------------------
# ✅ 3. Clean URLs — only for .html (NO extra nesting)
# ---------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# ---------------------------------------------------------------
# ✅ 4. Specific sections
# ---------------------------------------------------------------
RewriteRule ^our-branches/?$ our-branches.html [L]
RewriteCond %{DOCUMENT_ROOT}/our-branches/$1.html -f
RewriteRule ^our-branches/([a-zA-Z0-9\-_]+)/?$ our-branches/$1.html [L]

RewriteRule ^blogs/?$ blogs.html [L]
RewriteCond %{DOCUMENT_ROOT}/blogs/$1.html -f
RewriteRule ^blogs/([a-zA-Z0-9\-_]+)/?$ blogs/$1.html [L]

# ---------------------------------------------------------------
# ✅ 5. Security & Custom 404
# ---------------------------------------------------------------
Options -Indexes
ErrorDocument 404 /404.html
